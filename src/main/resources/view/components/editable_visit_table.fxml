<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import io.github.unchangingconstant.studenttracker.app.controllers.components.*?>


<fx:root type="EditableVisitTable" xmlns:fx="http://javafx.com/fxml" styleClass="editable-visit-table">
    <columnResizePolicy>
        <TableView fx:constant = "CONSTRAINED_RESIZE_POLICY"/>
    </columnResizePolicy>
    <columns>
        <TableColumn text="placeholder" fx:id="studentColumn">
            <columns>
                <TableColumn text="Visit ID" fx:id="visitIdColumn"/>
                <TableColumn text="Start Time" fx:id="startTimeColumn"/>
                <TableColumn text="End Time" fx:id="endTimeColumn"/>
            </columns>
        </TableColumn>
    </columns>
    <controlColumn text="Actions"/>
</fx:root>