<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root type="TableView" xmlns:fx="http://javafx.com/fxml" styleClass="student-table-editor">
    <columnResizePolicy>
        <TableView fx:constant = "CONSTRAINED_RESIZE_POLICY"/>
    </columnResizePolicy>
    <columns>
        <TableColumn text="Student ID" fx:id="studentIdColumn"/>
        <TableColumn text="Full Legal Name" fx:id="fullLegalNameColumn"/>
        <TableColumn text="Preferred Name" fx:id="prefNameColumn"/>
        <TableColumn text="Subjects" fx:id="subjectsColumn"/>
        <TableColumn text="Date Added" fx:id="dateAddedColumn"/>
        <TableColumn text="Actions" fx:id="actionsColumn"/>
    </columns>
</fx:root>