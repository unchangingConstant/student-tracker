<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import com.github.unchangingconstant.studenttracker.gui.components.*?>


<fx:root type="EditableStudentTable" xmlns:fx="http://javafx.com/fxml" styleClass="editable-student-table">
    <columnResizePolicy>
        <TableView fx:constant = "CONSTRAINED_RESIZE_POLICY"/>
    </columnResizePolicy>
    <columns>
        <TableColumn text="Student ID" fx:id="studentIdColumn"/>
        <TableColumn text="Full Name" fx:id="fullNameColumn"/>
        <TableColumn text="Preferred Name" fx:id="prefNameColumn"/>
        <TableColumn text="Visit Time" fx:id="visitTimeColumn"/>
        <TableColumn text="Date Added" fx:id="dateAddedColumn"/>
    </columns>
    <controlColumn text="Actions"/>
</fx:root>