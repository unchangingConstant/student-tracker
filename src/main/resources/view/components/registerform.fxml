<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="io.github.unchangingconstant.studenttracker.app.gui.controllers.components.RegisterFormController" 
    alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml">

    <Text text="Register Student" 
        GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4"/>

    <Label text="First Name:"
        GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="firstNameInput"
        GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Last Name:"
        GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    <TextField fx:id="lastNameInput"
        GridPane.columnIndex="3" GridPane.rowIndex="1"/>
    
    <Label text="Middle Name:"
        GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="middleNameInput"
        GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Subjects:"
        GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    <ComboBox fx:id="subjectsInput"
        GridPane.columnIndex="3" GridPane.rowIndex="2">
        <items>
        </items>
    </ComboBox>
    
    <Button fx:id="registerButton" text="Register"
        GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
        
</GridPane>