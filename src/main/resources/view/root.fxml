<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import io.github.unchangingconstant.studenttracker.app.controllers.RootController?>

<VBox fx:controller="io.github.unchangingconstant.studenttracker.app.controllers.RootController" xmlns:fx="http://javafx.com/fxml">
<padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

    <GridPane alignment="center" hgap="10" vgap="10">
        <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

            <Text text="Enter new student" 
                GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4"/>
        
            <Label text="First Name:"
                GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="firstNameInput"
                GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Last Name:"
                GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <TextField fx:id="lastNameInput"
                GridPane.columnIndex="3" GridPane.rowIndex="1"/>
            
            <Label text="Middle Name:"
                GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="middleNameInput"
                GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Subjects:"
                GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <TextField fx:id="subjectsInput"
                GridPane.columnIndex="3" GridPane.rowIndex="2"/>
            
            <Button text="Register" onAction="#onRegisterButtonAction"
                GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
            <Button text="Delete" 
                GridPane.columnIndex="2" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
    </GridPane>

    <!-- <fx:include source="database.fxml" fx:id="databaseView"/>  -->

</VBox>